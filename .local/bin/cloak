#!/usr/bin/env perl

use strict;
use warnings;
use File::Basename;
use feature 'say';

sub goahead {
    my $input = <STDIN>;
    chomp($input);
    $input =~ s/^\s+|\s+$//g;
    $input = lc($input);
    return $input =~ /^(y|yes|yas)$/ ? 1 : 0;
}

sub cloakdir {
    my ($path) = @_;
    my $name = basename($path);
    my $output = "$name.tar.gz.enc";
    print "Encrypt dir '$path' (-> $output)? [y/N] ";
    if (!goahead()) {
        return;
    }
    say "succ";
}

sub cloakfile {
    my ($path) = @_;
    my ($name, undef, $suffix) = fileparse($path, qr/\.[^.]*$/);
    say "name = $name, suffix = $suffix";
}

sub cloak {
    my ($arg) = @_;
    if (-f $arg) {
        cloakfile($arg);
    } elsif (-d $arg) {
        cloakdir($arg);
    } else {
        die "[ERROR] '$arg' is not a file or dir\n"
    }
}

if (@ARGV < 1) {
    say 'cloak <porno path>';
} else {
    foreach my $arg (@ARGV) {
        cloak($arg);
    }
}
