#!/usr/bin/env perl

use strict;
use warnings;
use File::Basename;
use feature 'say';

our @suffixlist = (qr/\.[^.]*$/);

sub cloakdir {
    my ($path) = @_;
    my ($name, undef, $suffix) = fileparse($path, @suffixlist);
    say "name = $name, suffix = $suffix";
}

sub cloakfile {
    my ($path) = @_;
    my ($name, undef, $suffix) = fileparse($path, @suffixlist);
    say "name = $name, suffix = $suffix";
}

sub cloak {
    my ($arg) = @_;
    if (-f $arg) {
        cloakfile($arg);
    } elsif (-d $arg) {
        cloakdir($arg);
    } else {
        die "[ERROR] '$arg' is not a file or dir\n"
    }
}

if (@ARGV < 1) {
    say 'cloak porno      # encrypt file/dir';
    say 'cloak porno.enc  # decrypt file/dir';
} else {
    foreach my $arg (@ARGV) {
        cloak($arg);
    }
}
