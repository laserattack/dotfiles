#!/usr/bin/env bash

set -e
set -u
set -o pipefail

greek_letters="Α alpha
Β beta
Γ gamma
Δ delta
Ε epsilon
Ζ zeta
Η eta
Θ theta
Ι iota
Κ kappa
Λ lambda
Μ mu
Ν nu
Ξ xi
Ο omicron
Π pi
Ρ rho
Σ sigma
Τ tau
Υ upsilon
Φ phi
Χ chi
Ψ psi
Ω omega
α alpha
β beta
γ gamma
δ delta
ε epsilon
ζ zeta
η eta
θ theta
ι iota
κ kappa
λ lambda
μ mu
ν nu
ξ xi
ο omicron
π pi
ρ rho
ς sigma final
σ sigma
τ tau
υ upsilon
φ phi
χ chi
ψ psi
ω omega"

if [[ $# == 0 ]]; then
    echo "$greek_letters" | awk '{print $1}'
elif [[ $# == 1 ]]; then
    echo "$greek_letters" | grep -i --color=never "$@" | awk '{print $1}'
else
    exit 1
fi
