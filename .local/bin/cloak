#!/usr/bin/env perl

use strict;
use warnings;

sub cloakfolder {
}

sub cloakfile {
}

sub cloak {
    my ($arg) = @_;
    if () {
        cloakfile($arg);
    } else {
        cloakfolder($arg);
    }
}

if (@ARGV < 1) {
    say 'cloak porno      # encrypt file/folder';
    say 'cloak porno.enc  # decrypt file/folder';
} else {
    foreach my $arg (@ARGV) {
        murder($arg);
    }
}
